<%= simple_form_for(@franken_rating) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :score %>
    <%= f.input :comment %>
    <%= f.input :serving %>
    <%= f.association :user %>
    <%= f.association :franken_beer %>
    <%= f.association :franken_brewery %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
