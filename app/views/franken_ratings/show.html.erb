<%- model_class = FrankenRating -%>
<div class="page-header">
  <h1><%=t '.title', :default => FrankenRating %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:score) %></dt>
      <dd><pre class="prettyprint"><%= @franken_rating.score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @franken_rating.comment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:serving) %></dt>
      <dd><pre class="prettyprint"><%= @franken_rating.serving %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              franken_ratings_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_franken_rating_path(@franken_rating), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              franken_rating_path(@franken_rating),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

