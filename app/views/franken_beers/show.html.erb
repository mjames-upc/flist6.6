<%- model_class = FrankenBeer -%>
<div class="page-header">
  <h1><%=t '.title', :default => FrankenBeer %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:beername) %></dt>
      <dd><pre class="prettyprint"><%= @franken_beer.beername %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @franken_beer.active %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rbid) %></dt>
      <dd><pre class="prettyprint"><%= @franken_beer.rbid %></pre></dd>
  </dl>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:beername) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @beer_ratings.each do |rating| %>
      <tr>
        <td>
          <%= link_to franken_rating_path(rating)  do %><%= rating.franken_beer.beername %><% end %>
        </td>
        <td><%= rating.comment %></td>
        <td><%= rating.score %></td>
        <td><%= rating.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              franken_beers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_franken_beer_path(@franken_beer), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              franken_beer_path(@franken_beer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
