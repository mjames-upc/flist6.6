<%- model_class = FrankenBeer -%>
<div class="page-header">
  <h1><%=t '.title', :default => FrankenBeer %></h1>
</div>


<%= form_tag franken_beers_path, :method => 'get', :id => "franken_beers_search" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :disable_with=>"Loading...", :name => nil %>
  </p>
<% end %>

<div id="franken_beers"><%= render "franken_beers" %></div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_franken_beer_path,
            :class => 'btn btn-primary' %>
